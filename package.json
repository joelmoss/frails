{
  "name": "frails",
  "version": "0.8.2",
  "description": "A Modern [F]ront End on [Rails] and Webpack",
  "main": "package/index.js",
  "repository": "git@github.com:joelmoss/frails.git",
  "author": "Joel Moss <joel@developwithstyle.com>",
  "license": "MIT",
  "files": [
    "package"
  ],
  "scripts": {
    "test": "jest"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "wallaby": {
    "runMode": "onsave"
  },
  "jest": {
    "clearMocks": true,
    "testEnvironment": "node",
    "snapshotSerializers": [
      "jest-serializer-path"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "setupFiles": [
      "jest-plugin-context/setup",
      "<rootDir>/test/support/cwd.js"
    ]
  },
  "dependencies": {
    "fast-glob": "^3.2.4",
    "lodash": "^4.17.20",
    "schema-utils": "^2.7.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "babel-jest": "^26.0.1",
    "debug": "^4.1.1",
    "jest": "^26.2.2",
    "jest-extended": "^0.11.5",
    "jest-plugin-context": "^2.9.0",
    "jest-serializer-path": "^0.1.15"
  }
}
