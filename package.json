{
  "repository": "git@github.com:joelmoss/frails.git",
  "author": "Joel Moss <joel@developwithstyle.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint packages --ext js"
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "wallaby": {
    "runMode": "onsave"
  },
  "jest": {
    "globalSetup": "<rootDir>/test/support/global_setup.js",
    "projects": [
      "<rootDir>/packages/*"
    ],
    "clearMocks": true,
    "testEnvironment": "node",
    "snapshotSerializers": [
      "jest-serializer-path"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "setupFiles": [
      "jest-plugin-context/setup"
    ]
  },
  "workspaces": [
    "packages/*",
    "test/dummy"
  ],
  "devDependencies": {
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "jest-extended": "^0.11.5",
    "jest-plugin-context": "^2.9.0",
    "jest-serializer-path": "^0.1.15",
    "prettier": "^2.1.2",
    "resolve": "^1.17.0"
  }
}
